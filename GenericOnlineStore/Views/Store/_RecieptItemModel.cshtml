@model GenericOnlineStore.Models.ViewModels.StoreItemViewModel


<form asp-action="RemoveFromCart" asp-controller="Store">



    <div class="row">
        <div class="col-md-2 float-left ">
            @*style="width:inherit;height:auto;"*@
            <img src="~/@Model.ImagePath" alt="@Model.ImagePath" class="mr-3 mt-3 rounded-circle  p-3 float-left" style="width: 100px; height: 100px;">
        </div>
        <div class="col-md-8">
            <div class="float-left">
                <h4>
                    @Model.item.ItemName <small>
                    <br />
                    <i>R @Model.item.Value</i>
                </small>
            </h4>
        </div>
    </div>
    <div class="col-md-2">
        @Html.HiddenFor(m => m.item.ItemId)

        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            @Html.DisplayFor(m => m.Quantity)
            <span asp-validation-for="Quantity" class="text-danger"></span>
            <br />
            <label asp-for="SubTotal" class="control-label"></label>
            R @Html.DisplayFor(m => m.SubTotal)
            <input type="submit" value="Details" class="btn float-right" />
        </div>


    </div>
</div>


</form>
