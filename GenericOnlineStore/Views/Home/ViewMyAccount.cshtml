@model GenericOnlineStore.Models.ViewModels.AccountViewModel


<!-- Nav tabs -->
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home">Profile</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu1"> History </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu2">Checkout</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active container" id="home">
        Name : @User.Identity.Name
        <br />
        <div class="jumbotron">
        </div>
        <div class="jumbotron">
        <strong>Total : @Model.Total</strong>
        </div>

        @* Tabb the page history and account details *@

    </div>
    <div class="tab-pane container" id="menu1">
        <br />

        <partial name="_ViewTransactionHistory" model="@Model.purchaseHistory">

        <a asp-action="Deposit" asp-controller="Payment" class="btn btn-success"> Deposit </a>
        <a asp-action="Withdraw" asp-controller="Payment" class="btn btn-secondary"> Widraw </a>
        <br />
    </div>
    <div class="tab-pane container" id="menu2">
        <a asp-action="Deposit" asp-controller="Payment" class="btn btn-success"> Deposit </a>
        <a asp-action="Checkout" asp-controller="Payment" class="btn btn-success"> Checkout </a>
    </div>
</div>